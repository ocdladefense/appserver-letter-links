{
	"comment": "Module definition file.",
	"connectedApp":"default",
	"name": "letter-links",
	"description": "letter-links",
	"files": [
		"TestTemplate.php",
		"ClassManager.php",
		"LanguageManager.php",
		"PictureManager.php",
		"StudentGroupManager.php",
		"models/Student.php",
		"models/StudentGroup.php",
		"models/Teacher.php",
		"soundex/FirstTwo.php"
	],
	"languages":["en","es"],
	"routes": {
		"letterlinks": {
			"callback": "showHome",
			"content-type": "text\/html"
		},
		"letterlinks/content/%page": {
			"callback": "showPage",
			"content-type": "text\/html"
		},
		"letterlinks/login": {
			"callback": "login",
			"content-type": "text\/html",
			"access":"is_authenticated",
			"authorization":"webserver"
		},
		"letterlinks/login2": {
			"callback": "test",
			"content-type": "text\/html"
		},
		"letterlinks/logout": {
			"callback": "logout",
			"content-type": "text\/html"
		},
		"letterlinks/forgotpassword": {
			"callback": "forgotPassword",
			"content-type": "text\/html"
		},
		"pictures/%lang/%letter/%sound":{
			"callback": "getPictures",
			"content-type": "text/html"	
		},
		"teachers/%tId/classes":{
			"callback": "getClassList",
			"content-type": "text/html"	
		},
		"my-account/%id":{
			"callback": "getMyAccount",
			"content-type": "text/html",
			"access":"is_authenticated",
			"authorization":"webserver"
		},
		"my-account":{
			"callback": "testAccount",
			"content-type": "text/html",
			"access":"is_authenticated",
			"authorization":"webserver"
		}
		,
		"classes/%cId/students":{
			"callback": "getStudentList",
			"content-type": "text/html"	
		},
		"student/%id/update":{
			"callback": "updateStudentForm",
			"content-type": "text/html"	
		},
		"student/update":{
			"callback": "updateStudent",
			"content-type": "text/html"	
		},
		"student/%id/delete":{
			"callback": "deleteStudent",
			"content-type": "text/html"	
		},
		"test/soundex":{
			"callback": "testSoundex",
			"content-type": "text/html"	
		}
	}
}