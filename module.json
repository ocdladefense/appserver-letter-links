		"letterlinks/es/%about": {
			"callback": "es",
			"content-type": "text\/html"
		},
		"letterlinks/faq": {
			"callback": "faq",
			"content-type": "text\/html"
		},
		"letterlinks/es/%faq": {
			"callback": "es",
			"content-type": "text\/html"
		},
		"letterlinks/help": {
			"callback": "help",
			"content-type": "text\/html"
		},
		"letterlinks/es/%help": {
			"callback": "es",
			"content-type": "text\/html"
		},
		"letterlinks/resources": {
			"callback": "help",
			"content-type": "text\/html"
		},
		"letterlinks/es/%resources": {
			"callback": "es",
			"content-type": "text\/html"
		},
		"letterlinks/login": {
			"callback": "login",
			"content-type": "text\/html"
		},
		"letterlinks/logout": {
			"callback": "logout",
			"content-type": "text\/html"
		},
		"letterlinks/forgotpassword": {
			"callback": "forgotPassword",
			"content-type": "text\/html"
		},
		"letterlinks/login2": {
			"callback": "test",
			"content-type": "text\/html",
			"access":"is_authenticated",
			"authorization":"webserver"
		},
		"pictures/%lang/%letter/%sound":{
			"callback": "getPictures",
			"content-type": "text/html"	
		},
		"teachers/%tId/classes":{
			"callback": "getClassList",
			"content-type": "text/html"	
		},
		"classes/%cId/students":{
			"callback": "getStudentList",
			"content-type": "text/html"	
		}
